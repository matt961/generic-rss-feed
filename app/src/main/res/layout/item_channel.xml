<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/feed_item_bg_dark"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="8dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="100dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/lastpubdateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleText"
        android:layout_marginEnd="100dp"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastpubdateText"
        android:layout_marginEnd="100dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/descriptionText"
        android:layout_marginEnd="100dp"
        android:textAlignment="textEnd"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/channelImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/categoryText"
        android:layout_alignEnd="@+id/descriptionText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Image"
        android:visibility="visible"/>

</RelativeLayout>